# AMOKK Environment Configuration Template
# Copy this file to .env and customize values as needed
# The same .env is used for both development and production

# ============================================================================
# Application Environment
# ============================================================================
# NODE_ENV: development | production
# Note: Automatically set by build tools
NODE_ENV=development

# ============================================================================
# Logger Configuration
# ============================================================================

# Log level: trace | debug | info | warn | error | fatal
LOG_LEVEL=debug

# Enable console output
LOG_CONSOLE=true

# Enable file output to ~/.amokk/logs/
LOG_FILE=true

# Use colors in console
LOG_COLORS=true

# ============================================================================
# Backend Configuration
# ============================================================================

# Backend API host (default: localhost)
# For frontend-only builds, point to your deployed backend server
VITE_BACKEND_HOST=127.0.0.1

# Backend API port (default: 8000)
VITE_BACKEND_PORT=8000

# Backend connection timeout in milliseconds
VITE_BACKEND_TIMEOUT=20000

# ============================================================================
# Debug Options
# ============================================================================

VITE_DEBUG_PATHS=true
VITE_DEBUG_BACKEND_STDIO=true
VITE_DEBUG_IPC=false
VITE_DEBUG_MODE=false
