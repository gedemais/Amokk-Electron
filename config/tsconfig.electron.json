{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist-electron",
    "rootDir": "..",
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["../electron/**/*.ts", "../tools/logger.js", "../tools/env-loader.js", "../tools/connectivity-test.js"],
  "exclude": ["../node_modules", "../dist", "../build", "../src"]
}
